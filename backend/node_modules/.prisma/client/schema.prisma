generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocumentType {
  TRAINEES_DATA_FORM
  TRAINER_DATA_FORM
  ATTENDANCE_FORM
  GENERAL_REPORT_FORM
  COURSE_CERTIFICATE
}

model User {
  id        Int      @id @default(autoincrement())
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id                    Int         @id @default(autoincrement())
  courseNumber          String      @unique @db.VarChar(32)
  courseCode            String      @db.VarChar(32)
  courseFieldId         Int
  courseField           CourseField @relation(fields: [courseFieldId], references: [id], onDelete: Cascade)
  courseName            String      @db.VarChar(128)
  numberOfBeneficiaries Int
  numberOfGraduates     Int
  courseDuration        Int
  courseHours           Int
  courseVenue           String      @db.VarChar(128)
  courseStartDate       DateTime
  courseEndDate         DateTime
  trainerName           String      @db.VarChar(128)
  trainerPhoneNumber    String      @db.VarChar(32)
  notes                 String?     @db.Text
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  // Relations
  images    CourseImage[]
  documents CourseDocument[]

  @@index([courseStartDate])
  @@index([courseEndDate])
  @@index([courseFieldId])
  @@index([trainerName])
}

model CourseImage {
  id        Int      @id @default(autoincrement())
  courseId  Int
  url       String   @db.Text
  altText   String?  @db.VarChar(256)
  createdAt DateTime @default(now())

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([courseId, url])
  @@index([courseId])
}

model CourseDocument {
  id        Int          @id @default(autoincrement())
  courseId  Int
  type      DocumentType
  path      String       @db.Text
  fileName  String?      @db.VarChar(255)
  createdAt DateTime     @default(now())

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([courseId, type, path])
  @@index([courseId, type])
}

model CourseField {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(64)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  courses Course[]

  @@index([name])
}
